{
    // Editor configuration
    "editor.fontSize": 14,

    "editor.fontLigatures": true,

    "editor.tabSize": 4,

    "editor.bracketPairColorization.enabled": true,

    "editor.minimap.enabled": false,

    "editor.renderWhitespace": "all",

    "editor.detectIndentation": true,

    "editor.wordWrap": "on", // or "wordWrapColumn": 120

    "editor.wordWrapColumn": 120,

    "editor.cursorSmoothCaretAnimation": "on",

    "editor.formatOnSave": false,

    "editor.smoothScrolling": true,

    "editor.inlineSuggest.enabled": true, // code completion enabled by default

    "terminal.integrated.fontSize": 14,

    "debug.console.fontSize": 14,

    "files.trimTrailingWhitespace": true,

    "files.insertFinalNewline": true,

    "search.useIgnoreFiles": false,

    "window.zoomLevel": -1,


    // Explorer
    "explorer.excludeGitIgnore": false,

    "explorer.confirmDelete": true,

    "explorer.confirmDragAndDrop": false,


    // Workbench
    "workbench.colorTheme": "Default Dark Modern",

    "workbench.startupEditor": "newUntitledFile",

    "workbench.list.horizontalScrolling": true,

    "workbench.sideBar.location": "left",

    "workbench.tree.indent": 20,

    "workbench.enableExperiments": false,

    "workbench.list.smoothScrolling": true,

    "workbench.colorCustomizations": {
        "editorLineNumber.foreground": "#29d629af",
        "activityBar.background": "#223e22af",
        "focusBorder": "#29d629af",
        "widget.border": "#29d629af",
    },


    // Exclude folders
    "files.exclude": {
        "**/.git": false
    },


    // Git
    "git.confirmSync": false,

    "git.autorefresh": false,

    "diffEditor.renderSideBySide": true,

    "git.openRepositoryInParentFolders": "always",


    // Terminal
    "terminal.integrated.shellIntegration.enabled": false,

    "terminal.integrated.defaultProfile.windows": "Git Bash",


    // Telemetry & Updates
    "telemetry.telemetryLevel": "off",

    "update.mode": "default",

    "update.showReleaseNotes": true,


    // Extensions
    "extensions.autoUpdate": true,

    "extensions.autoCheckUpdates": true,

    "extensions.ignoreRecommendations": true,

    /// github.copilot
    "github.copilot.enable": true,
    "github.copilot.advanced": true,
    "github.copilot.nextEditSuggestions.enabled": false,
    "chat.agent.enabled": true,
    "chat.agent.suggestedActions.enabled": true,
    "chat.agent.suggestedActions.showInEditor": true,
    /// plantuml extension
    "plantuml.server": "https://plantuml.neo.volvocars.net/",
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
        "Cargo.toml": "Cargo.lock",
        "*.sqlite": "${capture}.${extname}-*",
        "*.db": "${capture}.${extname}-*",
        "*.sqlite3": "${capture}.${extname}-*",
        "*.db3": "${capture}.${extname}-*",
        "*.sdb": "${capture}.${extname}-*",
        "*.s3db": "${capture}.${extname}-*"
    }
}
